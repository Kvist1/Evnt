<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="group_8.project_evnt.AddPollFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_rounded_shape"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Title"/>

        <EditText
            android:id="@+id/text_input_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Ask a question"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/plus_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:typeface="serif"
                android:textSize="40dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/add_alternative"
                android:hint="Add alternative"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent">
            </EditText>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>